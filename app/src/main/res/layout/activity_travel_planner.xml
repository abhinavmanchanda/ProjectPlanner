<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <data>

    <variable
        name="presenter"
        type="android.bootcamp.travelplanner.TravelPlannerPresenter" />
  </data>
<LinearLayout
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:gravity="center_horizontal">
  <EditText
      android:id="@+id/distance"
      android:hint="Total Distance"
      android:gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:text="@={presenter.distance}"/>
  <EditText
      android:id="@+id/velocity"
      android:hint="Speed"
      android:gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:text="@={presenter.velocity}"/>

  <TextView
      android:id="@+id/time"
      android:gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="@={presenter.time}"/>

  <TextView
      android:id="@+id/time_with_buffer"
      android:text="Time With Buffer= "
      android:gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"/>

  <Button
      android:id="@+id/calculate"
      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:text="@string/calculate"
      android:onClick="@{() -> presenter.calculate()}"/>

  <Button
      android:id="@+id/capture"
      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:text="Capture"
      android:onClick="@{() -> presenter.capture()}"/>

  <Button
      android:id="@+id/save"
      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:text="Save"
      android:onClick="save"/>

  <ImageView
      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:id="@+id/capturedImage"/>
</LinearLayout>
</layout>
